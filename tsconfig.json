{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2021",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "outDir": "./build/tsc",
    "baseUrl": "."
  },
  "include": ["src/index.ts", "src/server/**/*"],
  "exclude": ["build", "dist", "node_modules", "**/*.test.ts", "packages"]
}
